{
    "compilerOptions": {
        "lib": ["DOM", "ESNext"],
        "jsx": "preserve",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Frag",
        "allowJs": true,
        "checkJs": true,
        "noImplicitAny": false,
        "strict": true,
        "outDir": "dist",
        "target": "ES6",
        "typeRoots": ["./typings"]
    },
    "include": ["src/**/*", "typings/monaco.d.ts", "typings/windowExt.d.ts"]
}